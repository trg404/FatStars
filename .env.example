# Business name displayed on the page
BUSINESS_NAME=Fat Shack

# Your Google review link
# Find it: Search your business on Google Maps > Share > "Write a review" link
GOOGLE_REVIEW_URL=https://search.google.com/local/writereview?placeid=YOUR_PLACE_ID

# Email address where feedback is sent
OWNER_EMAIL=you@example.com

# SMTP settings (Gmail example below)
# For Gmail: enable 2FA, then create an App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=you@gmail.com
SMTP_PASS=your-app-password

# Server port (default 3000)
PORT=3000
